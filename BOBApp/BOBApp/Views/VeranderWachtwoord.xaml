<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BOBApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Maps="using:Windows.UI.Xaml.Controls.Maps"
    x:Class="BOBApp.Views.VeranderWachtwoord"
    mc:Ignorable="d"
    DataContext="{Binding VeranderWachtwoordVM, Mode=TwoWay, Source={StaticResource Locator}}" >

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Styles/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>


    <ScrollViewer>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="VisualStateGroup">
                <VisualState x:Name="Under800">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="1" MinWindowWidth="1"/>
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="Over800">
                    <VisualState.Setters>
                        <!-- <Setter Target="buttonRegisterFacebook.(FrameworkElement.Margin)">
                            <Setter.Value>
                                <Thickness>10,30,10,20</Thickness>
                            </Setter.Value>
                        </Setter> -->
                        <Setter Target="buttonCancel.(FrameworkElement.Width)" Value="160"/>
                        <Setter Target="buttonCancel.(FrameworkElement.Height)" Value="32"/>
                        <Setter Target="buttonWijzig.(FrameworkElement.Width)" Value="160"/>
                        <Setter Target="buttonWijzig.(FrameworkElement.Height)" Value="32"/>
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="1" MinWindowWidth="800"/>
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <RelativePanel>
            <TextBlock Text="{Binding Error,Mode=TwoWay}" x:Name="textBlockError" Margin="10" RelativePanel.Above="passwordBox" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" Foreground="Red" FontWeight="Bold" TextAlignment="Center" Style="{StaticResource textblock}"/>
            <PasswordBox Password="{Binding Password, Mode=TwoWay}" x:Name="passwordBox"  PlaceholderText="Wachtwoord" RelativePanel.AlignVerticalCenterWithPanel="true" RelativePanel.AlignHorizontalCenterWithPanel="True" Margin="10" Width="300" Style="{StaticResource passwordBox}" PasswordChanged="passwordBox_PasswordChanged"/>
            <PasswordBox Password="{Binding PasswordRepeat, Mode=TwoWay}" x:Name="passwordBoxHerhaal" RelativePanel.Below="passwordBox" PlaceholderText="Herhaal Wachtwoord" RelativePanel.AlignHorizontalCenterWithPanel="True" Margin="10" Width="300" Style="{StaticResource passwordBox}" PasswordChanged="passwordBoxHerhaal_PasswordChanged"/>
            <Button x:Name="buttonCancel" Content="Annuleer" RelativePanel.AlignBottomWithPanel="True" Height="32" Margin="10" RelativePanel.AlignLeftWithPanel="True" Command="{Binding CancelCommand}" Style="{StaticResource button}"/>
            <Button x:Name="buttonWijzig" Content="Wijzig wachtwoord" RelativePanel.AlignBottomWithPanel="True" Height="32" Margin="10" RelativePanel.AlignRightWithPanel="True" Command="{Binding WijzigCommand}" Style="{StaticResource button}" IsEnabled="False"/>

        </RelativePanel>

    </ScrollViewer>

</Page>