<Page x:ConnectionId='1'
    x:Class="BOBApp.Views.Register"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BOBApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="thisPage"
    mc:Ignorable="d"
    DataContext="{Binding RegisterVM, Mode=TwoWay, Source={StaticResource Locator}}">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Styles/Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    

    <ScrollViewer>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='2' x:Name="VisualStateGroup">
                <VisualState x:ConnectionId='3' x:Name="Under800">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="1" MinWindowWidth="1"/>
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:ConnectionId='4' x:Name="Over800">
                    <VisualState.Setters>
                       <!-- <Setter Target="buttonRegisterFacebook.(FrameworkElement.Margin)">
                            <Setter.Value>
                                <Thickness>10,30,10,20</Thickness>
                            </Setter.Value>
                        </Setter> -->
                        <Setter Target="buttonCancel.(FrameworkElement.Width)" Value="160"/>
                        <Setter Target="buttonCancel.(FrameworkElement.Height)" Value="32"/>
                        <Setter Target="buttonRegistreer.(FrameworkElement.Width)" Value="160"/>
                        <Setter Target="buttonRegistreer.(FrameworkElement.Height)" Value="32"/>
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowHeight="1" MinWindowWidth="800"/>
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <RelativePanel>
            <TextBlock x:ConnectionId='5' Text="{Binding Error,Mode=TwoWay}" x:Name="textBlockError" Margin="10" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" Foreground="Red" FontWeight="Bold" TextAlignment="Center" Style="{StaticResource textblock}"/>
            <TextBox x:ConnectionId='6' Text="{Binding NewRegister.Firstname, Mode=TwoWay}"  x:Name="textBoxVoornaam" TextWrapping="Wrap"  PlaceholderText="Voornaam" RelativePanel.Below="textBlockError" RelativePanel.AlignHorizontalCenterWithPanel="True" Width="300" Margin="10" Style="{StaticResource textBox}"                                          />
            <TextBox x:ConnectionId='7' Text="{Binding NewRegister.Lastname, Mode=TwoWay}" Margin="10" x:Name="textBoxNaam" TextWrapping="Wrap" PlaceholderText="Naam" RelativePanel.Below="textBoxVoornaam" RelativePanel.AlignHorizontalCenterWithPanel="True" Width="300" Style="{StaticResource textBox}"                                      />
            <TextBox x:ConnectionId='8' Text="{Binding NewRegister.Email, Mode=TwoWay}"  x:Name="textBoxEmail" TextWrapping="Wrap" PlaceholderText="Email" RelativePanel.Below="textBoxNaam" RelativePanel.AlignHorizontalCenterWithPanel="True" Width="300" Margin="10" Style="{StaticResource textBox}"                                       />
            <TextBox x:ConnectionId='9' Text="{Binding NewRegister.Cellphone, Mode=TwoWay}"  x:Name="textBoxGSMnr" TextWrapping="Wrap"  PlaceholderText="GSM Nummer" RelativePanel.Below="textBoxEmail" RelativePanel.AlignHorizontalCenterWithPanel="True" Width="300" Margin="10" Style="{StaticResource textBox}"                                       />
            <TextBox x:ConnectionId='10' Text="{Binding NewRegister.LicensePlate, Mode=TwoWay}"  x:Name="textBoxNummerplaat" TextWrapping="Wrap" PlaceholderText="Nummerplaat" RelativePanel.Below="textBoxGSMnr" RelativePanel.AlignHorizontalCenterWithPanel="True" Width="300" Margin="10" Style="{StaticResource textBox}"                                              />
            <TextBlock x:ConnectionId='11' x:Name="textBlockAutoType" TextWrapping="Wrap" Text="Automerk" RelativePanel.Below="textBoxNummerplaat" Margin="10" RelativePanel.AlignLeftWith="textBoxNummerplaat" RelativePanel.AlignBottomWith="" RelativePanel.AlignTopWith="" Style="{StaticResource textblock}" />
            <ComboBox x:ConnectionId='12' x:Name="comboBox" HorizontalAlignment="Stretch"  ItemsSource="{Binding Merken, Mode=TwoWay}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedAutoType, Mode=TwoWay}" PlaceholderText="Kies een merk" RelativePanel.Below="textBoxNummerplaat" RelativePanel.RightOf="textBlockAutoType" RelativePanel.AlignRightWith="textBoxNummerplaat" Margin="10"                                             />
            <TextBox x:ConnectionId='13' Text="{Binding PricePerKm , Mode=TwoWay}"  x:Name="textboxPrice" TextWrapping="Wrap" PlaceholderText="Prijs per km" RelativePanel.Below="textBlockAutoType" RelativePanel.AlignHorizontalCenterWithPanel="True" Width="300" Margin="10" Style="{StaticResource textBox}"                                       />
            <ToggleSwitch x:ConnectionId='14' x:Name="tglIsBob" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.Below="textboxPrice" Width="300" Margin="10" OffContent="User" OnContent="Bob" Header="Bob?" IsOn="{Binding NewRegister.IsBob,Mode=TwoWay}"                            />
            <PasswordBox x:ConnectionId='15' Password="{Binding Password, Mode=TwoWay}" x:Name="passwordBox" RelativePanel.Below="tglIsBob" PlaceholderText="Wachtwoord" RelativePanel.AlignHorizontalCenterWithPanel="True" Margin="10" Width="300" Style="{StaticResource passwordBox}"/>
            <PasswordBox x:ConnectionId='16' Password="{Binding PasswordRepeat, Mode=TwoWay}" x:Name="passwordBoxHerhaal" RelativePanel.Below="passwordBox" PlaceholderText="Herhaal Wachtwoord" RelativePanel.AlignHorizontalCenterWithPanel="True" Margin="10" Width="300" Style="{StaticResource passwordBox}"/>
            <Button x:ConnectionId='17' x:Name="buttonCancel" Content="Annuleer" RelativePanel.AlignBottomWithPanel="True" Height="32" Margin="10" RelativePanel.AlignLeftWithPanel="True" Width="100" Command="{Binding CancelCommand}" Style="{StaticResource button}"/>
            <Button x:ConnectionId='18' x:Name="buttonRegistreer" Content="Registreer" RelativePanel.AlignBottomWithPanel="True" Height="32" Margin="10" RelativePanel.AlignRightWithPanel="True" Width="100" Command="{Binding RegisterCommand}" IsEnabled="False" Style="{StaticResource button}"/>
        
        </RelativePanel>
    </ScrollViewer>
</Page>

